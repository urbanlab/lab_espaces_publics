{
  "apiVersion": 2,
  "name": "theme/hero",
  "title": "Hero",
  "category": "widgets",
  "icon": "megaphone",
  "description": "A custom hero block with an icon, title, subtitle, and tags.",
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "source": "html",
      "selector": "h2"
    },
    "subtitle": {
      "type": "string",
      "source": "html",
      "selector": "p"
    },
    "iconUrl": {
      "type": "string",
      "default": "@asset('images/picto-hero.svg')"
    },
    "tags": {
      "type": "array",
      "default": []
    }
  },
  "editorScript": "theme-hero-block",
  "style": "theme-hero-block"
}
