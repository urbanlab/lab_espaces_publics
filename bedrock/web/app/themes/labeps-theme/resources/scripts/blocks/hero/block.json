{
  "apiVersion": 3,
  "name": "labeps-theme/hero",
  "title": "Hero",
  "category": "design",
  "icon": "megaphone",
  "description": "A custom hero block featuring an icon, title, subtitle, and tags, ideal for prominent display sections.",
  "supports": {
    "html": false,
    "align": true,
    "color": {
      "text": true
    },
    "typography": {
      "fontWeight": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "source": "html",
      "selector": "h2"
    },
    "subtitle": {
      "type": "string",
      "source": "html",
      "selector": "p"
    },
    "iconUrl": {
      "type": "string",
      "default": "@asset('images/picto-hero.svg')"
    },
    "tags": {
      "type": "array",
      "default": []
    },
    "textColor": {
      "type": "string",
      "default": "#000000"
    },
    "fontWeight": {
      "type": "string",
      "default": "normal"
    }
  },
  "editorScript": "theme-hero-block",
  "style": "theme-hero-block",
  "editorStyle": "theme-hero-block-editor"
}
